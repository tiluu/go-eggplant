<h1>Edit Trip</h1>

<%= form_for(@trip) do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    
    <%= f.label :start_date %><br>
    <%= select_date Date.today, prefix: :start_date %><br>

    <%= f.label :end_date %><br>
    <%= select_date Date.today + 1, prefix: :end_date %><br>
    
    <%= f.label :city %><br>
    <%= f.text_field :city %><br>

    <%= f.label :state_or_province %><br>
    <%= f.text_field :state_or_province %><br>

    <%= f.label :country %><br>
    <%= f.text_field :country %>

    <p>
        <%= f.submit "Save changes" %>
    </p>
<% end %>

