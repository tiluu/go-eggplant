<h1>Edit Trip</h1>

<%= form_for(@trip) do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :start_date %><br>
    <%= f.date_field :start_date %><br>

    <%= f.label :end_date %><br>
    <%= f.date_field :end_date %><br>

    <%= f.label :location %><br>
    <%= f.text_field :location %>

    <p>
        <%= f.submit "Save changes" %>
    </p>
<% end %>
