
<%= form_for(:trip, url: getPath('trips', @action)) do |f| %>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1"><%= label_tag(:name, "Trip name") %></span>
      <%= f.text_field :name, class: 'form-control'%>
    </div>

    <%= f.label :start_date %><br>
    <%= date_select :trip, :start_date, default: 1.day.from_now %><br>

    <%= f.label :end_date %><br>
    <%= date_select :trip, :end_date, default: 2.days.from_now %><br>

    <div class="input-group">
        <span class="input-group-addon" id="basic-addon2"><%= f.label :city %><br></span>
         <%= f.text_field :city , class: 'form-control'%>
    </div>
   

     <div class="input-group">
        <span class="input-group-addon" id="basic-addon3"><%= f.label :state_or_province %></span>
        <%= f.text_field :state_or_province, class: 'form-control'%>
    </div>
    

     <div class="input-group">
        <span class="input-group-addon" id="basic-addon4"><%= f.label :country %></span>
        <%= f.text_field :country, class: 'form-control'%>
    </div>


    <p><%= f.submit "Submit", class: 'btn' %></p>

<% end %>
</div>
