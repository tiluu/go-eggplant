<style>
    .today {background:steelblue;
        width: 20px;
        height:20px;
        padding-left: 2px;
        border-radius: 50%;
        color: #fff;
     }
     .trip {
         background: #92c500;
         width: 20px;
         height: 20px;
         padding-left: 2px;
         border-radius: 50%;
         color: #fff;
     }
</style>

<div id="date-data" start_date="<%= start_d %>" end_date="<%= end_d %>"></div>
<table>
    <thead>
        <th colspan=7>
            <h1>{{ getMonth() }}</h1>
        </th>
    </thead>

    <tbody>
        <tr>
            <td ng-repeat="weekday in weekdays">
                {{ weekday }}
            </td>
        </tr>
           
        <tr>
            <td ng-repeat="day in firstWeekOfMonth() track by $index">
                <div ng-class="{'trip': tripDates(day)}">{{ day }}</div>
            </td>
        </tr>
      
        <tr ng-repeat="week in [0,1,2,3]">
            <td ng-repeat="day in remainingWeeks() track by $index" ng-if="notMaxDays(day,week)">
                <div ng-class="{'trip': tripDates(getDay(day,week))}">
                    {{ getDay(day,week) }}
                </div>
            </td>
        </tr>
    </tbody>
</table>

</div>
