<%= form_for(:idea) do |f| %>
    <%#= f.hidden_field :user_id, value: current_user.id %>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1"> What</span>
      <%= f.text_field :title, class: 'form-control' %> 
    </div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon2">  <%= label_tag(:idea_category_id, "Category") %></span>
        <%= f.collection_select :idea_category_id, IdeaCategory.all, :id, :name, class: 'dropdown-toggle' %>
    </div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon3"> When</span>
    </div>
    
    <input class="date-picker" placeholder="Start Date"> </input>
    <input class="time-picker" placeholder="Time"></input>
    <%= date_select :idea, :start_date, default: @trip.start_date %>
    <%= time_select :idea, :start_time %><br>
    To <br>
    <input class="date-picker" placeholder="End Date"> </input>
    <input class="time-picker" placeholder="Time"></input>
    <%= date_select :idea, :end_date, default: @trip.end_date %>
    <%= time_select :idea, :end_time %><br>      

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon4"> Where</span>
      <%= f.text_field :location, class: 'form-control' %>
    </div>
    
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon5"> Details</span>
      <%= f.text_area :notes, rows: 3, class: 'form-control' %>
    </div>

    <%= f.submit "Submit", class: 'btn' %>
<% end %>
    

